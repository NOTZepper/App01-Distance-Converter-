using System;

namespace DistanceConverter
{
    class Program
    {
        static void Main(string[] args)
        {
            // Print application name and programmer name
            Console.WriteLine("Distance Converter App");
            Console.WriteLine("Programmer: [Your Name]");

            // Prompt user to input a distance in miles
            Console.Write("Enter a distance in miles: ");
            double miles = double.Parse(Console.ReadLine());

            // Convert miles to feet
            double feet = miles * 5280;

            // Output the equivalent distance in feet
            Console.WriteLine("{0} miles = {1} feet", miles, feet);

            // Prompt user to input a distance in feet
            Console.Write("Enter a distance in feet: ");
            double inputFeet = double.Parse(Console.ReadLine());

            // Convert feet to miles
            double outputMiles = inputFeet / 5280;

            // Output the equivalent distance in miles
            Console.WriteLine("{0} feet = {1} miles", inputFeet, outputMiles);

            // Prompt user to input a distance in miles
            Console.Write("Enter a distance in miles: ");
            double inputMiles = double.Parse(Console.ReadLine());

            // Convert miles to meters
            double outputMeters = inputMiles * 1609.34;

            // Output the equivalent distance in meters
            Console.WriteLine("{0} miles = {1} meters", inputMiles, outputMeters);

            // Prompt user to select a conversion option
            Console.WriteLine("Select the unit to convert from (Miles, Feet, or Metres):");
            string fromUnit = Console.ReadLine();

            // Prompt user to select a conversion option
            Console.WriteLine("Select the unit to convert to (Miles, Feet, or Metres):");
            string toUnit = Console.ReadLine();

            // Prompt user to input the distance to convert
            Console.Write("Enter the distance to convert: ");
            double distance = double.Parse(Console.ReadLine());

            // Perform the conversion based on user inputs
            double result = 0;
            switch (fromUnit.ToLower())
            {
                case "miles":
                    if (toUnit.ToLower() == "feet")
                    {
                        result = distance * 5280;
                    }
                    else if (toUnit.ToLower() == "metres")
                    {
                        result = distance * 1609.34;
                    }
                    else
                    {
                        Console.WriteLine("Invalid unit choice");
                    }
                    break;

                case "feet":
                    if (toUnit.ToLower() == "miles")
                    {
                        result = distance / 5280;
                    }
                    else if (toUnit.ToLower() == "metres")
                    {
                        result = distance * 0.3048;
                    }
                    else
                    {
                        Console.WriteLine("Invalid unit choice");
                    }
                    break;

                case "metres":
                    if (toUnit.ToLower() == "miles")
                    {
                        result = distance / 1609.34;
                    }
                    else if (toUnit.ToLower() == "feet")
                    {
                        result = distance / 0.3048;
                    }
                    else
                    {
                        Console.WriteLine("Invalid unit choice");
                    }
                    break;

                default:
                    Console.WriteLine("Invalid unit choice");
                    break;
            }

            // Output the converted distance
            if (result > 0)
            {
                Console.WriteLine("{0} {1} = {2} {3}", distance, fromUnit, result, toUnit);
            }

            // Output an error message for invalid distance input
            if (double.IsNaN(result))
        }

    }
    
}
